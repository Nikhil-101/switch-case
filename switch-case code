#include<iostream>

int main()
{
int a,b,c,d;
cout<<"Enter the 1st no.";
cin>>a;
cout<<"Enter the @nd no.";
cin>>b;
cout<<"\n";
cout<<"Enter the operation you want to do";
cin>>c;

switch(c)

case "+":
              d=a+b;
              cout<<"The sum of two no. are"<<d;
              break;
case "-":
              d=a-b;
              cout<<"The subtract of two no. are"<<d;
              break;
case "*":
              d=a*b;
              cout<<"The product of two no. are"<<d;
              break;
case "/":
              d=a/b;
              cout<<"The divident of two no. are"<<d;
              break;
default:      
              cout<<"Invalid Key!!!!Please enter a valid key..."
              break;
return 0;
}
